<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/txvJdlIDBuku"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="ID Buku" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text=":" />

            <TextView
                android:id="@+id/txvIDBuku"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="ID Buku"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/txvJdlJudulBuku"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Judul" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text=":" />

            <TextView
                android:id="@+id/txvJudulBuku"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Judul Buku" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/txvJdlPengarang"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Pengarang" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text=":" />

            <TextView
                android:id="@+id/txvPengarang"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Pengarang" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/txvJdlPenerbit"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Penerbit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text=":" />

            <TextView
                android:id="@+id/txvPenerbit"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Penerbit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp">

            <TextView
                android:id="@+id/txvJdlTahunTerbit"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Tahun Terbit" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text=":" />

            <TextView
                android:id="@+id/txvTahunTerbit"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="Tahun Terbit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:layout_marginEnd="6dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/edit" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="43dp"
                android:layout_height="43dp"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/delete" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>